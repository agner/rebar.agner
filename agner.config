{name, "rebar"}.
{authors, ["Dave Smith <dizzyd@dizzyd.com>"]}.
{description, "A sophisticated build-tool for Erlang projects that follows OTP principles"}.
{homepage, "https://github.com/basho/rebar"}.
{license, "Apache License 2.0", "LICENSE"}.
{url, {git, "https://github.com/agner/rebar.git", {branch, "agner"}}}.
{applications, [rebar]}.
{install_command, "mkdir -p $AGNER_INSTALL_PREFIX/bin && cp ./rebar $AGNER_INSTALL_PREFIX/bin/"}.
{bin_files, ["bin/rebar"]}.
{build_command, "make"}.
